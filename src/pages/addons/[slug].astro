---
import Layout from '../../layouts/Layout.astro';
import { getAddonBySlug, getAllAddonSlugs, getAddons, getCoverUrl, formatDate, renderContent } from '../../lib/strapi.js';

export async function getStaticPaths() {
  const slugs = await getAllAddonSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const addon = await getAddonBySlug(slug);

if (!addon) {
  return Astro.redirect('/blog/addons');
}

const coverUrl = getCoverUrl(addon);

// Get related addons (exclude current)
const allAddons = await getAddons();
const relatedAddons = allAddons.filter(a => a.sulg !== addon.sulg).slice(0, 3);
---

<Layout
  title={`${addon.title} | Stremio Addon Manager`}
  description={addon.summary || `Learn about ${addon.title} addon for Stremio.`}
  image={coverUrl}
  article={{
    title: addon.title,
    summary: addon.summary,
    publishedAt: addon.publishedAt,
    slug: addon.sulg
  }}
>
  <article class="addon-article">
    <header class="addon-article__header">
      <a href="/blog/addons" class="addon-article__back">‚Üê Back to Addons</a>
      <h1>{addon.title}</h1>
      <div class="addon-article__meta">
        <time datetime={addon.publishedAt}>{formatDate(addon.publishedAt)}</time>
      </div>
    </header>

    {coverUrl && (
      <div class="addon-article__cover">
        <img src={coverUrl} alt={addon.title} />
      </div>
    )}

    <div class="addon-article__content" set:html={renderContent(addon.content)} />
  </article>

  {relatedAddons.length > 0 && (
    <section class="related-addons">
      <h2>Related Addons</h2>
      <div class="related-grid">
        {relatedAddons.map((related) => (
          <a href={`/blog/addons/${related.sulg}`} class="related-card">
            <div class="related-card__image">
              {getCoverUrl(related) ? (
                <img src={getCoverUrl(related)} alt={related.title} />
              ) : (
                <div class="related-card__placeholder">
                  <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                    <path d="M2 17l10 5 10-5"/>
                    <path d="M2 12l10 5 10-5"/>
                  </svg>
                </div>
              )}
            </div>
            <div class="related-card__content">
              <h3>{related.title}</h3>
            </div>
          </a>
        ))}
      </div>
    </section>
  )}
</Layout>

<style>
  .addon-article {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .addon-article__back {
    display: inline-block;
    margin-bottom: 1.5rem;
    color: var(--primary-color);
    text-decoration: none;
    font-weight: 500;
  }

  .addon-article__back:hover {
    text-decoration: underline;
  }

  .addon-article__header {
    margin-bottom: 2rem;
  }

  .addon-article__header h1 {
    font-size: 2.5rem;
    line-height: 1.2;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .addon-article__meta {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .addon-article__cover {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .addon-article__cover img {
    width: 100%;
    height: auto;
    display: block;
  }

  .addon-article__content {
    line-height: 1.8;
  }

  .addon-article__content :global(h2) {
    font-size: 1.75rem;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-color);
  }

  .addon-article__content :global(h3) {
    font-size: 1.4rem;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-color);
  }

  .addon-article__content :global(p) {
    margin-bottom: 1.5rem;
  }

  .addon-article__content :global(ul),
  .addon-article__content :global(ol) {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .addon-article__content :global(li) {
    margin-bottom: 0.5rem;
  }

  .addon-article__content :global(pre) {
    background: #f5f5f5;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin-bottom: 1.5rem;
  }

  .addon-article__content :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
  }

  .addon-article__content :global(blockquote) {
    border-left: 4px solid var(--primary-color);
    padding-left: 1rem;
    margin: 1.5rem 0;
    color: var(--text-muted);
  }

  .addon-article__content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  /* Related Addons */
  .related-addons {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem 3rem;
    border-top: 1px solid var(--border-color);
  }

  .related-addons h2 {
    font-size: 1.5rem;
    margin-bottom: 1.5rem;
    color: var(--text-color);
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .related-card {
    background: var(--bg-color);
    border-radius: 10px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
    border: 1px solid var(--border-color);
  }

  .related-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 16px rgba(0,0,0,0.1);
    text-decoration: none;
  }

  .related-card__image {
    width: 100%;
    height: 120px;
    overflow: hidden;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .related-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .related-card__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255,255,255,0.7);
  }

  .related-card__content {
    padding: 1rem;
  }

  .related-card__content h3 {
    font-size: 0.95rem;
    margin: 0;
    color: var(--text-color);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (max-width: 640px) {
    .addon-article__header h1 {
      font-size: 2rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
