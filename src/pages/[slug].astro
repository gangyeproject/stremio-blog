---
import Layout from '../layouts/Layout.astro';
import { getAllSlugs, getArticleBySlug, getArticles, getCoverUrl, formatDate, renderContent } from '../lib/strapi.js';

export async function getStaticPaths() {
  const slugs = await getAllSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug);

if (!article) {
  return Astro.redirect('/');
}

// Get all articles for prev/next navigation
const allArticles = await getArticles();
const currentIndex = allArticles.findIndex(a => a.slug === slug);
const prevArticle = currentIndex < allArticles.length - 1 ? allArticles[currentIndex + 1] : null;
const nextArticle = currentIndex > 0 ? allArticles[currentIndex - 1] : null;

// Get related articles (exclude current, max 3)
const relatedArticles = allArticles.filter(a => a.slug !== slug).slice(0, 3);

const coverUrl = getCoverUrl(article);
const content = renderContent(article.content);
---

<Layout
  title={`${article.title} - Stremio Addon Manager Blog`}
  description={article.summary || `Read ${article.title} on Stremio Addon Manager Blog`}
  image={coverUrl}
  article={{
    title: article.title,
    summary: article.summary,
    publishedAt: article.publishedAt,
    slug: article.slug
  }}
>
  <div class="article-layout">
    <div class="article-main">
      <a href="https://stremioaddonmanager.org/blog" class="back-link">← Back to Blog</a>

      <article class="article">
        <header class="article__header">
          <h1>{article.title}</h1>
          <div class="article__meta">
            <span class="article__date">{formatDate(article.publishedAt)}</span>
          </div>
        </header>

        {coverUrl && (
          <div class="article__cover">
            <img src={coverUrl} alt={article.title} />
          </div>
        )}

        <div class="article__content" set:html={content}></div>
      </article>

      <!-- Prev/Next Navigation -->
      <nav class="article-nav">
        {prevArticle ? (
          <a href={`/blog/${prevArticle.slug}`} class="article-nav__link article-nav__prev">
            <span class="article-nav__label">← Previous</span>
            <span class="article-nav__title">{prevArticle.title}</span>
          </a>
        ) : <div></div>}
        {nextArticle ? (
          <a href={`/blog/${nextArticle.slug}`} class="article-nav__link article-nav__next">
            <span class="article-nav__label">Next →</span>
            <span class="article-nav__title">{nextArticle.title}</span>
          </a>
        ) : <div></div>}
      </nav>
    </div>

    <!-- Sidebar: Related Articles -->
    {relatedArticles.length > 0 && (
      <aside class="article-sidebar">
        <div class="sidebar-sticky">
          <h3>Related Articles</h3>
          <div class="sidebar-articles">
            {relatedArticles.map((related) => (
              <a href={`/blog/${related.slug}`} class="sidebar-card">
                <span class="sidebar-card__title">{related.title}</span>
              </a>
            ))}
          </div>
        </div>
      </aside>
    )}
  </div>
</Layout>

<style>
  .article-layout {
    display: grid;
    grid-template-columns: 1fr 280px;
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .article-main {
    min-width: 0;
  }

  .back-link {
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .article__header {
    margin-bottom: 2rem;
  }

  .article__header h1 {
    font-size: 2.25rem;
    line-height: 1.3;
    margin: 0 0 1rem 0;
    color: var(--text-color);
  }

  .article__meta {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .article__cover {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .article__cover img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article__content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
  }

  .article__content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .article__content :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem 0;
    color: var(--text-color);
  }

  .article__content :global(h3) {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem 0;
    color: var(--text-color);
  }

  .article__content :global(a) {
    color: var(--primary-color);
  }

  .article__content :global(code) {
    background: #f0f0f0;
    padding: 2px 6px;
    border-radius: 4px;
    font-family: 'Fira Code', monospace;
    font-size: 0.9em;
    color: #333;
  }

  .article__content :global(pre code) {
    background: none;
    padding: 0;
    border-radius: 0;
    color: #f5f5f5;
  }

  .article__content :global(ul),
  .article__content :global(ol) {
    margin: 0 0 1.5rem 1.5rem;
  }

  .article__content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article__content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--primary-color);
    background: #f9f9f9;
    font-style: italic;
  }

  .article__content :global(pre) {
    background: #1a1a2e;
    color: #f5f5f5;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article__content :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
  }

  .article__content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem auto;
    display: block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .article__content :global(img[alt*="screenshot"]),
  .article__content :global(img[alt*="Screenshot"]) {
    max-width: 600px;
  }

  .article__content :global(img[alt*="icon"]),
  .article__content :global(img[alt*="Icon"]),
  .article__content :global(img[alt*="logo"]),
  .article__content :global(img[alt*="Logo"]) {
    max-width: 200px;
  }

  .article__content :global(video) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem auto;
    display: block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  @media (max-width: 768px) {
    .article__header h1 {
      font-size: 1.75rem;
    }

    .article__content {
      font-size: 1rem;
    }
  }

  /* Prev/Next Navigation */
  .article-nav {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #eee;
  }

  .article-nav__link {
    flex: 1;
    padding: 1rem;
    background: #f5f5f5;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .article-nav__link:hover {
    background: #eee;
  }

  .article-nav__prev {
    text-align: left;
  }

  .article-nav__next {
    text-align: right;
  }

  .article-nav__label {
    display: block;
    font-size: 0.85rem;
    color: var(--text-muted);
    margin-bottom: 0.25rem;
  }

  .article-nav__title {
    display: block;
    color: var(--text-color);
    font-weight: 500;
  }

  /* Related Articles */
  .article-sidebar {
    position: relative;
  }

  .sidebar-sticky {
    position: sticky;
    top: 80px;
  }

  .sidebar-sticky h3 {
    font-size: 1rem;
    margin: 0 0 1rem 0;
    color: var(--text-color);
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #eee;
  }

  .sidebar-articles {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .sidebar-card {
    display: block;
    padding: 0.75rem;
    background: #f5f5f5;
    border-radius: 8px;
    text-decoration: none;
    transition: background 0.2s;
  }

  .sidebar-card:hover {
    background: #eee;
  }

  .sidebar-card__title {
    font-size: 0.9rem;
    color: var(--text-color);
    font-weight: 500;
    line-height: 1.4;
  }

  @media (max-width: 768px) {
    .article-nav {
      flex-direction: column;
    }

    .article-layout {
      grid-template-columns: 1fr;
    }

    .article-sidebar {
      order: -1;
    }

    .sidebar-sticky {
      position: static;
    }
  }
</style>
