---
import Layout from '../layouts/Layout.astro';
import { getAllSlugs, getArticleBySlug, getCoverUrl, formatDate, renderContent } from '../lib/strapi.js';

export async function getStaticPaths() {
  const slugs = await getAllSlugs();
  return slugs.map(slug => ({ params: { slug } }));
}

const { slug } = Astro.params;
const article = await getArticleBySlug(slug);

if (!article) {
  return Astro.redirect('/');
}

const coverUrl = getCoverUrl(article);
const content = renderContent(article.content);
---

<Layout
  title={`${article.title} - Stremio Addon Manager Blog`}
  description={article.summary || `Read ${article.title} on Stremio Addon Manager Blog`}
  image={coverUrl}
  article={{
    title: article.title,
    summary: article.summary,
    publishedAt: article.publishedAt,
    slug: article.slug
  }}
>
  <div class="article-page">
    <a href="https://stremioaddonmanager.org/blog" class="back-link">‚Üê Back to Blog</a>

    <article class="article">
      <header class="article__header">
        <h1>{article.title}</h1>
        <div class="article__meta">
          <span class="article__date">{formatDate(article.publishedAt)}</span>
        </div>
      </header>

      {coverUrl && (
        <div class="article__cover">
          <img src={coverUrl} alt={article.title} />
        </div>
      )}

      <div class="article__content" set:html={content}></div>
    </article>
  </div>
</Layout>

<style>
  .article-page {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .back-link {
    display: inline-block;
    color: var(--primary-color);
    text-decoration: none;
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .article__header {
    margin-bottom: 2rem;
  }

  .article__header h1 {
    font-size: 2.25rem;
    line-height: 1.3;
    margin: 0 0 1rem 0;
    color: var(--text-color);
  }

  .article__meta {
    color: var(--text-muted);
    font-size: 0.95rem;
  }

  .article__cover {
    margin-bottom: 2rem;
    border-radius: 12px;
    overflow: hidden;
  }

  .article__cover img {
    width: 100%;
    height: auto;
    display: block;
  }

  .article__content {
    font-size: 1.1rem;
    line-height: 1.8;
    color: var(--text-color);
  }

  .article__content :global(p) {
    margin: 0 0 1.5rem 0;
  }

  .article__content :global(h2) {
    font-size: 1.5rem;
    margin: 2rem 0 1rem 0;
    color: var(--text-color);
  }

  .article__content :global(h3) {
    font-size: 1.25rem;
    margin: 1.5rem 0 0.75rem 0;
    color: var(--text-color);
  }

  .article__content :global(a) {
    color: var(--primary-color);
  }

  .article__content :global(ul),
  .article__content :global(ol) {
    margin: 0 0 1.5rem 1.5rem;
  }

  .article__content :global(li) {
    margin-bottom: 0.5rem;
  }

  .article__content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--primary-color);
    background: #f9f9f9;
    font-style: italic;
  }

  .article__content :global(pre) {
    background: #1a1a2e;
    color: #f5f5f5;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
  }

  .article__content :global(code) {
    font-family: 'Fira Code', monospace;
    font-size: 0.9rem;
  }

  .article__content :global(img) {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 1.5rem 0;
  }

  @media (max-width: 768px) {
    .article__header h1 {
      font-size: 1.75rem;
    }

    .article__content {
      font-size: 1rem;
    }
  }
</style>
